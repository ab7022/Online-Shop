<body>
    <header class="header" data-header>
        <%- include("../../shared/includes/header") %>  
    </header>
        <main>
        <section class="auth">
  
    <form action="/login" method="POST">
        <div class="auth-btn">

        <h1>Login</h1>
        <% if(inputData.errorMessage){ %>
            <section class="alert">
                <h2>Invalid Credentials</h2>
                <p><%= inputData.errorMessage %></p>
            </section>
            <% } %> 
        <!-- <input type="hidden" name="_csrf" value=""> -->

        <label for="email">Email</label>
        <input type="email" name="email" id="email" value="<%= inputData.email %>" required>
    </p>
    <p>
        <label for="password">Password</label>
        <input type="password" name="password" id="password" minlength="6" value="<%= inputData.password %>"  required>
    </p>
        <button class="btn">Login</button>
        <p id="switch-form">
            <a href="/Signup">Create A New User</a>
        </p>
    </form>   
</div> 
</section>
    </main>
    <%- include("../../shared/includes/footer") %>